@page
@model IndexModel
@{
    ViewData["Title"] = "Chat";
}

<div class="container">    
    <div class="row">        
        <div class="col-xs-12 col-sm-6 col-sm-offset-2">
            <br>
            Usuario: <input type="text" id="userInput" class="form-control"/>
            <br />
            Mensaje: <input type="text" id="messageInput"  class="form-control" />
            <br>
            <input type="button" id="sendButton" value="Enviar"  class="btn btn-info pull-right"/>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">        
        <div class="col-xs-12 col-sm-6 col-sm-offset-2">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>

<script src="~/lib/signalr/signalr.js"></script>
<script src="~/js/chat.js"></script>